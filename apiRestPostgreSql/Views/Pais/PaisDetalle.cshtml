@model apiRestPostgreSql.Models.ViewModels.PaisVM
@{
    ViewData["Title"] = "Pais_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="text-center align-items-center" >
    @if (Model.oPais.Id == 0)
    {
        <h1 class="fw-bold">Crear País</h1>
    }else{
        <h1 class="fw-bold">Editar País</h1>
    }

    

    <div class="mx-auto sm:px-6 lg:px-8 mt-5">
        <div class="bg-black bg-opacity-50 border border-2 border-white rounded rounded-6  shadow-xl">
            <form asp-action="PaisDetalle" asp-controller="Pais" method="post">
                <div class="mb-5 mt-2 ms-5 me-5">
                    <input type="hidden" asp-for="oPais.Id" />
                    <label asp-for="oPais.Nombre" class="block mb-2 fw-bold fs-3 text-white form-label">Nombre</label>
                    <input type="text" asp-for="oPais.Nombre" class="form-control mx-auto" placeholder="Colombia" required>
                </div>
                <div class="mb-2">
                    @if(Model.oPais.Id == 0){
                        <button class="btn btn-success fs-3" type="submit">Crear País</button>
                    }else{
                        <button class="btn btn-success fs-3" type="submit">Guardar País</button>
                    }

                    <a class="btn btn-danger fs-3" asp-action="Index" asp-controller="Pais">Cancelar</a>
                </div>
            </form>
            
        </div>
    </div>
</div>



