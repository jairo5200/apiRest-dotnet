@model apiRestPostgreSql.Models.ViewModels.PersonaVM
@{
    ViewData["Title"] = "PersonaDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center align-items-center">
    @if (Model.oPersona.Id == 0)
    {
        <h1 class="fw-bold">Crear Persona</h1>
    }
    else
    {
        <h1 class="fw-bold">Editar Persona</h1>
    }



    <div class="mx-auto sm:px-6 lg:px-8 mt-5">
        <div class="bg-black bg-opacity-50 border border-2 border-white rounded rounded-6  shadow-xl">
            <form asp-action="PersonaDetalle" asp-controller="Persona" method="post">
                <div class="mb-5 mt-2 ms-5 me-5">
                    <input type="hidden" asp-for="oPersona.Id" />
                    <label asp-for="oPersona.Nombre" class="block mb-2 fw-bold fs-3 text-white form-label">Nombre</label>
                    <input type="text" asp-for="oPersona.Nombre" class="form-control mx-auto" placeholder="Pedro Sanchez" required>
                    <span asp-validation-for="oPersona.Nombre" class="text-danger fs-4"></span>
                    <label asp-for="oPersona.Telefono" class="block mb-2 fw-bold fs-3 text-white form-label">Telefono</label>
                    <input type="number" asp-for="oPersona.Telefono" class="form-control mx-auto" placeholder="3214567890" required>
                    <span asp-validation-for="oPersona.Telefono" class="text-danger fs-4"></span>
                    <label asp-for="oPersona.Direccion" class="block mb-2 fw-bold fs-3 text-white form-label">Direccion</label>
                    <input type="text" asp-for="oPersona.Direccion" class="form-control mx-auto" placeholder="crr 76 cll 12-23" required>
                    <span asp-validation-for="oPersona.Direccion" class="text-danger fs-4"></span>
                    <label asp-for="oPersona.IdMunicipio" class="block mb-2 fw-bold fs-3 text-white form-label">Municipio</label>
                    <select class="form-select form-select-sm" asp-for="oPersona.IdMunicipio" asp-items="@Model.oListaMunicipios">
                        <option selected disabled>-- seleccionar --</option>
                    </select>
                    <span asp-validation-for="oPersona.IdMunicipio" class="text-danger fs-4"></span>
                </div>
                <div class="mb-2">
                    @if (Model.oPersona.Id == 0)
                    {
                        <button class="btn btn-success fs-3" type="submit">Crear Persona</button>
                    }
                    else
                    {
                        <button class="btn btn-success fs-3" type="submit">Guardar Persona</button>
                    }

                    <a class="btn btn-danger fs-3" asp-action="Index" asp-controller="Persona">Cancelar</a>
                </div>
            </form>

        </div>
    </div>
</div>