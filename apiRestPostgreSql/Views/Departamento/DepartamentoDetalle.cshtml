@model apiRestPostgreSql.Models.ViewModels.DepartamentoVM
@{
    ViewData["Title"] = "DepartamentoDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-center align-items-center">
    @if (Model.oDepartamento.Id == 0)
    {
        <h1 class="fw-bold">Crear Departamento</h1>
    }
    else
    {
        <h1 class="fw-bold">Editar Departamento</h1>
    }



    <div class="mx-auto sm:px-6 lg:px-8 mt-5">
        <div class="bg-black bg-opacity-50 border border-2 border-white rounded rounded-6  shadow-xl">
            <form asp-action="DepartamentoDetalle" asp-controller="Departamento" method="post">
                <div class="mb-5 mt-2 ms-5 me-5">
                    <input type="hidden" asp-for="oDepartamento.Id" />
                    <label asp-for="oDepartamento.Nombre" class="block mb-2 fw-bold fs-3 text-white form-label">Nombre</label>
                    <input type="text" asp-for="oDepartamento.Nombre" class="form-control mx-auto" placeholder="Antioquia" required>
                    <span asp-validation-for="oDepartamento.Nombre" class="text-danger fs-4"></span>
                    <label asp-for="oDepartamento.IdPais" class="block mb-2 fw-bold fs-3 text-white form-label">País</label>
                    <select class="form-select form-select-sm" asp-for="oDepartamento.IdPais" asp-items="@Model.oListaPais">
                        <option selected disabled>-- seleccionar --</option>
                    </select>
                    <span asp-validation-for="oDepartamento.IdPais" class="text-danger fs-4"></span>
                </div>
                <div class="mb-2">
                    @if (Model.oDepartamento.Id == 0)
                    {
                        <button class="btn btn-success fs-3" type="submit">Crear Departamento</button>
                    }
                    else
                    {
                        <button class="btn btn-success fs-3" type="submit">Guardar Departamento</button>
                    }

                    <a class="btn btn-danger fs-3" asp-action="Index" asp-controller="Departamento">Cancelar</a>
                </div>
            </form>

        </div>
    </div>
</div>
