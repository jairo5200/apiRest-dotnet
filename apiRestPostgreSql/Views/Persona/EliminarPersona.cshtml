@model apiRestPostgreSql.Models.Persona
@{
    ViewData["Title"] = "EliminarPersona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="fw-bold text-danger">¿Esta seguro de eliminar esta Persona?</h1>
<hr />
<div class="mx-auto sm:px-6 lg:px-8 mt-5">
    <div class="bg-black bg-opacity-50 border border-2 border-white rounded rounded-6  shadow-xl">
        <form asp-action="EliminarPersona" asp-controller="Persona" method="post">
            <div class="mb-5 mt-2 ms-5 me-5">
                <input type="hidden" asp-for="Id" />
                <label asp-for="Nombre" class="block mb-2 fw-bold fs-3 text-white form-label">Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control mx-auto" disabled>
                <label asp-for="Telefono" class="block mb-2 fw-bold fs-3 text-white form-label">Telefono</label>
                <input type="number" asp-for="Telefono" class="form-control mx-auto" disabled>
                <label asp-for="Direccion" class="block mb-2 fw-bold fs-3 text-white form-label">Direccion</label>
                <input type="text" asp-for="Direccion" class="form-control mx-auto" disabled>
                <label asp-for="IdMunicipio" class="block mb-2 fw-bold fs-3 text-white form-label">Municipio</label>
                <input type="text" asp-for="oMunicipio.Nombre" class="form-control mx-auto" disabled>
            </div>
            <div class="mb-2">
                <button class="btn btn-danger fs-3" type="submit">Eliminar</button>
                <a class="btn btn-dark fs-3" asp-action="Index" asp-controller="Persona">Cancelar</a>
            </div>
        </form>

    </div>
</div>
</div>
