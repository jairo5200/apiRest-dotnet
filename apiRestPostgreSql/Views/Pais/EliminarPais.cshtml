@model apiRestPostgreSql.Models.Paise
@{
    ViewData["Title"] = "eliminarPais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1 class="fw-bold text-danger">¿Esta seguro de eliminar este País?</h1>
    <hr/>
    <div class="mx-auto sm:px-6 lg:px-8 mt-5">
        <div class="bg-black bg-opacity-50 border border-2 border-white rounded rounded-6  shadow-xl">
        <form asp-action="EliminarPais" asp-controller="Pais" method="post">
                <div class="mb-5 mt-2 ms-5 me-5">
                    <input type="hidden" asp-for="Id" />
                    <label asp-for="Nombre" class="block mb-2 fw-bold fs-3 text-white form-label">Nombre</label>
                    <input type="text" asp-for="Nombre" class="form-control mx-auto" placeholder="Colombia" disabled>
                </div>
                <div class="mb-2">
                    <button class="btn btn-danger fs-3" type="submit">Eliminar</button>
                    <a class="btn btn-dark fs-3" asp-action="Index" asp-controller="Pais">Cancelar</a>
                </div>
            </form>

        </div>
    </div>
@if (ViewData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}
</div>


